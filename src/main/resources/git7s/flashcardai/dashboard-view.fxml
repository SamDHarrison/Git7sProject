<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="git7s.flashcardai.DashboardController">

    <!-- Left Panel: My Studies -->
    <left>
        <VBox alignment="CENTER" prefWidth="300" spacing="20" style="-fx-background-color: #f0f0f1; -fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY STUDIES" />

            <Button fx:id="createDeckButton" text="Create Flashcard Deck" prefWidth="250" prefHeight="40" />
            <Button fx:id="viewFlashcardsButton" text="View Flashcard Sets" prefWidth="250" prefHeight="40" />
            <Button fx:id="testAllFlashcardsButton" text="TEST ALL FLASHCARDS" prefWidth="250" prefHeight="40" style="-fx-font-weight: bold; -fx-background-color: #ff6961;" />
        </VBox>
    </left>

    <!-- Right Panel: My Progress -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY PROGRESS" />
            <ProgressBar fx:id="studyProgressBar" prefHeight="20.0" prefWidth="280.0" />

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Strongest subject:" />
                <Label fx:id="strongestTopicLabel" text="Programming" />
            </HBox>

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Weakest subject:" />
                <Label fx:id="weakestTopicLabel" text="Science" />
            </HBox>

            <Button fx:id="settingsButton" text="Settings" prefWidth="250" prefHeight="40" />
        </VBox>
    </center>

</BorderPane>
