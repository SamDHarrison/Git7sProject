<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="git7s.flashcardai.DashboardController">

    <!-- Left Panel: Profile and Study Buddies -->
    <left>
        <VBox spacing="30" alignment="CENTER" prefWidth="300" style="-fx-background-color: #f0f0f1;">
            <ImageView fitWidth="100" fitHeight="100" style="-fx-background-color: grey;" />
            <Label fx:id="usernameLabel" style="-fx-font-size: 16px;"/>
            <Label fx:id="leagueLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
            <Button text="+ Add Study Buddies" />
            <Label text="Study Buddy Streaks" style="-fx-font-weight: bold;"/>
            <HBox spacing="40">
                <Circle radius="15" style="-fx-fill: grey;"/>
                <Circle radius="15" style="-fx-fill: grey;"/>
                <Circle radius="15" style="-fx-fill: grey;"/>
                <Circle radius="15" style="-fx-fill: grey;"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center Panel: Study Progress and Stats -->
    <center>
        <VBox spacing="30">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Study Progress" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <ProgressBar fx:id="studyProgressBar" prefWidth="50"/>

            <VBox spacing="10">
                <Label text="Quick Stats" style="-fx-font-weight: bold;"/>
                <Label fx:id="lastStudiedLabel" text="Last studied on..."/>
                <Label fx:id="flashcardsTodayLabel" text="Flashcards reviewed today..."/>
            </VBox>

            <VBox spacing="10">
                <Label text="Power Play + Weak Spots" style="-fx-font-weight: bold;"/>
                <Label fx:id="strongestTopicLabel" text="Strongest topic..."/>
                <Label fx:id="weakestTopicLabel" text="Weakest topic..."/>
            </VBox>

            <!-- Spacer pushes button lower -->
            <Region prefHeight="50"/>

            <Button text="My Subjects" prefWidth="500" prefHeight="40"/>
        </VBox>
    </center>

