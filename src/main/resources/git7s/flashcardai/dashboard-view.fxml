<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="git7s.flashcardai.DashboardController">

    <!-- Left Panel: My Studies -->
    <left>
        <VBox alignment="CENTER" prefWidth="300" spacing="20" style="-fx-background-color: #f0f0f1; -fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY STUDIES" />

            <Button fx:id="createDeckButton" prefHeight="40" prefWidth="250" text="Create Flashcard Deck"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold; "/>
            <Button fx:id="viewFlashcardsButton" prefHeight="40" prefWidth="250" text="View Flashcard Sets"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold; "/>
            <Button fx:id="testAllFlashcardsButton" prefHeight="40" prefWidth="250" style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="TEST ALL FLASHCARDS" />
        </VBox>
    </left>

    <!-- Right Panel: My Progress -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY PROGRESS" />
            <ProgressBar fx:id="studyProgressBar" prefHeight="20.0" prefWidth="280.0" />

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Strongest subject:" />
                <Label fx:id="strongestTopicLabel" text="Programming" />
            </HBox>

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Weakest subject:" />
                <Label fx:id="weakestTopicLabel" text="Science" />
            </HBox>

            <Button fx:id="settingsButton" prefHeight="40" prefWidth="250" text="Settings" />
        </VBox>
    </center>

</BorderPane>
