<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="git7s.flashcardai.AddSubjectController">

    <!-- Left Panel: My Studies -->
    <left>
        <VBox alignment="CENTER" prefWidth="300" spacing="30" style="-fx-background-color: #f0f0f1; -fx-padding: 5 20 10 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY STUDIES" />

            <Button fx:id="createDeckButton" prefHeight="40" prefWidth="250" text="Flashcard Deck"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#handleGenerateFlashCards" />
            <Button fx:id="viewFlashcardsButton" prefHeight="40" prefWidth="250" text="My Subjects"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button fx:id="testAllFlashcardsButton" prefHeight="40" prefWidth="250"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold;" text="TEST ALL FLASHCARDS" />
        </VBox>
    </left>

    <!-- Vertical Separator -->
    <center>
        <VBox prefWidth="2" alignment="CENTER">
            <Rectangle width="2" height="250" style="-fx-fill: rgb(192,192,192);" />
        </VBox>
    </center>

    <!-- Right Panel: My Progress -->
    <right>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 5 20 10 20;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="MY PROGRESS" />

            <StackPane>
                <ProgressBar fx:id="studyProgressBar" prefHeight="20.0" prefWidth="290.0"
                             style="-fx-accent: #60C3D8;" />
                <Label fx:id="progressTextLabel" text="75% complete" style="-fx-text-fill: white; -fx-font-weight: bold;" />
            </StackPane>

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Strongest subject:" />
                <Label fx:id="strongestTopicLabel" text="Programming" />
            </HBox>

            <HBox spacing="10">
                <Label style="-fx-font-weight: bold;" text="Weakest subject:" />
                <Label fx:id="weakestTopicLabel" text="Science" />
            </HBox>

            <Button fx:id="settingsButton" prefHeight="40" prefWidth="250" text="Settings"
                    style="-fx-background-color: #60C3D8; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </right>

</BorderPane>
