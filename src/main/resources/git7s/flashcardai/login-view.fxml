<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="git7s.flashcardai.LoginController" prefWidth="600" prefHeight="400">

    <ImageView layoutX="40" layoutY="70" fitWidth="240" fitHeight="240" pickOnBounds="true" preserveRatio="true">
        <Image url="@flashcardlogo.png" />
    </ImageView>

    <Label layoutX="425" layoutY="60" text="LOGIN" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" layoutX="380" layoutY="100" promptText="Username" />

    <PasswordField fx:id="passwordField" layoutX="380" layoutY="150" promptText="Password" />

    <Button layoutX="425" layoutY="200" text="Login" onAction="#handleLogin" />

    <Label layoutX="330" layoutY="250" text="New here?" />

    <Button layoutX="395" layoutY="245" text="Create Account" onAction="#handleCreateAccount" />
</AnchorPane>
