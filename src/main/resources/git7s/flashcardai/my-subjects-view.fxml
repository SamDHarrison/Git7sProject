<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" fx:controller="git7s.flashcardai.MySubjectsController" >


    <!-- Page Title -->
    <Label layoutX="250" layoutY="30" text="My Subjects"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Subject Dropdown -->
    <Label layoutX="70" layoutY="90" text="Select Subject:" />
    <ComboBox fx:id="subjectComboBox" layoutX="180" layoutY="85" prefWidth="250"
              onAction="#handleSubjectSelection" />

    <!-- Topics List -->
    <Label layoutX="70" layoutY="140" text="Topics:" />
    <ListView fx:id="topicsListView" layoutX="180" layoutY="135" prefWidth="250" prefHeight="200" />

</AnchorPane>