<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600" prefHeight="400"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="git7s.flashcardai.MySubjectsController">

    <!-- Page Title -->
    <Label layoutX="230" layoutY="30" text="My Subjects"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Subject Dropdown -->
    <Label layoutX="80" layoutY="90" text="Select Subject:" />
    <ComboBox fx:id="subjectComboBox" layoutX="200" layoutY="85" prefWidth="250"
              onAction="#handleSubjectSelection" />

    <!-- Topics List -->
    <Label layoutX="80" layoutY="140" text="Topics:" />
    <ListView fx:id="topicsListView" layoutX="200" layoutY="135" prefWidth="250" prefHeight="200" />