<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="inputPane" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="git7s.flashcardai.controller.MySubjectsController">


    <!-- Page Title -->
    <Label layoutX="265" layoutY="30" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="My Subjects" />

    <!-- Subject Dropdown -->
    <Label layoutX="22.0" layoutY="89.0" text="Select Subject:" />
    <ComboBox fx:id="subjectComboBox" layoutX="105.0" layoutY="85.0" onAction="#handleSubjectSelection" prefHeight="25.0" prefWidth="459.0" />

    <!-- Topics List -->
    <Label layoutX="23.0" layoutY="127.0" text="Topics:" />
    <ListView fx:id="topicsListView" layoutX="105.0" layoutY="127.0" prefHeight="200" prefWidth="459.0" />

    <!-- Button to create -->
    <Button fx:id="createFlashcardsButton" layoutX="121.0" layoutY="350.0" onAction="#handleCreateFlashcardsPopup" style="-fx-background-color: #60C3D8; -fx-text-fill: white;" text="Create New Flashcards" />

    <Button fx:id="testCurrentTopic" layoutX="22.0" layoutY="237.0" onAction="#handleTestCurrentTopic" prefHeight="90.0" prefWidth="77.0" style="-fx-font-size: 20px; -fx-background-color: #60C3D8; -fx-text-fill: white;" text="Test Topic" textAlignment="CENTER" wrapText="true" />

    <!-- Back to Dashboard Screen Button -->
    <Button layoutX="20" layoutY="20" onAction="#handleBackToDashboard" style="-fx-background-color: #d3d3d3; -fx-text-fill: #000000; -fx-border-color: grey;" text="Back" />

    <!-- Delete Flashcards Button -->
    <Button fx:id="deleteFlashcardsButton" layoutX="471.0" layoutY="350.0" onAction="#handleDeleteSubject" style="-fx-background-color: #60C3D8; -fx-text-fill: white;" text="Delete Subject" />

    <!-- Update Flashcards Button -->
    <Button fx:id="updateFlashcardsButton" layoutX="312.0" layoutY="350.0" onAction="#handleUpdateFlashcards" style="-fx-background-color: #60C3D8; -fx-text-fill: white;" text="Update Flashcards" />


</AnchorPane>
