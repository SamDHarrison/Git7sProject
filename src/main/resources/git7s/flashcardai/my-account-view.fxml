<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="git7s.flashcardai.MyAccountController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Profile Picture Section -->
    <Label text="Profile Picture" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <HBox spacing="15">
        <Circle radius="25" stroke="gray" fill="lightgray"/>
        <Circle radius="25" stroke="gray" fill="lightgray"/>
        <Circle radius="25" stroke="gray" fill="lightgray"/>
        <Circle radius="25" stroke="gray" fill="lightgray"/>
        <StackPane>
            <Circle radius="25" stroke="gray" fill="lightgray"/>
            <Label text="+" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </StackPane>
    </HBox>

    <Separator/>

    <!-- Username Section -->
    <GridPane hgap="10" vgap="10">
        <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 16px;"/>
        <Label text=".........." GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Hyperlink text="edit" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#handleEditUsername"/>
    </GridPane>

    <Separator/>

    <!-- Delete Account Section -->
    <Label text="Delete Account" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label text="This will delete all your data and cannot be undone"
           style="-fx-text-fill: red; -fx-font-style: italic;"/>
    <Button text="Delete Account" onAction="#handleDeleteAccount"
            style="-fx-background-color: transparent; -fx-border-color: red; -fx-text-fill: red; -fx-font-size: 14px; -fx-font-weight: bold;"/>

</VBox>
